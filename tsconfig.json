{
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "CommonJS",
        "target": "es2021",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "esModuleInterop": true,
        "outDir": "build"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}